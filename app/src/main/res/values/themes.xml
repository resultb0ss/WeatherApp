<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/dividerColor</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.WeatherApp" parent="Base.Theme.WeatherApp" />


    <style name="MainTextViewStyle">
        <item name="fontFamily">sans-serif</item>

    </style>

    <style name="styleDevider">
        <item name="backgroundColor">@color/black</item>
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">1dp</item>


    </style>

    <style name="AdditionalWeatherInformationStyle" parent="MainTextViewStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:includeFontPadding">false</item>

    </style>

    <style name="AdditionalWeatherInformationIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>

    </style>

    <style name="iconButton" parent="Widget.MaterialComponents.Button.Icon">
        <item name="iconSize">25dp</item>
        <item name="iconTint">?attr/colorControlNormal</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">4dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>

    </style>
</resources>